# Description: Default SELinux policy for Ataraxia Linux
# URL:         https://ataraxialinux.github.io/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Priority:    required
# Section:     security

name=selinux-policy
version=20200704.2
release=1
options=('bootstrap')
source=("https://github.com/ataraxialinux/selinux-policy/archive/$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	mkdir -p "$PKG"
	cp -av * "$PKG"/
	rm -rf "$PKG"/build.sh "$PKG"/patches "$PKG"/usr
	mv "$PKG"/config "$PKG"/etc/selinux/config

	find "$PKG" -type d -exec chmod 755 {} +
}
