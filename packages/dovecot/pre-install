getent group dovecot || groupadd dovecot 2>/dev/null
getent group dovenull || groupadd dovenull 2>/dev/null
getent passwd dovecot || useradd -c "Dovecot user" -g dovecot -d /dev/null -s /usr/bin/nologin dovecot 2>/dev/null
getent passwd dovenull || useradd -c "Dovecot login user" -g dovenull -d /dev/null -s /usr/bin/nologin dovenull 2>/dev/null
passwd -l dovecot 2>/dev/null
passwd -l dovenull 2>/dev/null
