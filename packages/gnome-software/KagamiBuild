# Description: GNOME Software Center
# URL:         https://wiki.gnome.org/Apps/Software
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson appstream-glib gnome-desktop gnome-online-accounts gspell libxmlb ostree flatpak
# Dep x86_64:  fwupd
# Dep i586:    fwupd
# Section:     gnome

name=gnome-software
version=3.36.1
release=1
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	case $BARCH in
		x86_64|i586)
			fwupd="true"
			;;
		*)
			fwupd="false"
			;;
	esac

	cd "$SRC"/$name-$version
	sed -i "s|subdir('po')|# subdir('po')|" meson.build

	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/$name-$version \
		-Dexternal_appstream=true \
		-Ddefault_featured_apps=true \
		-Dfwupd=$fwupd \
		-Dgtk_doc=false \
		-Dmalcontent=false \
		-Dman=false \
		-Dpackagekit=false \
		-Dtests=false \
		-Dvalgrind=false
	ninja
	DESTDIR="$PKG" ninja install
}
