# Description: OpenBSD userland
# URL:         https://github.com/ataraxialinux/userland
# Maintainer:  protonesso, nagakamira at gmail dot com
# Obsoletes:   openbsd-diffutils
# Priority:    required
# Section:     devel

name=userland
version=6.7p6
release=1
options=('bootstrap')
source=("https://github.com/ataraxialinux/userland/archive/$version.tar.gz")

build() {
	export CFLAGS="$CFLAGS -fcommon"

	cd "$SRC"/$name-$version
	autoreconf -vif
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib
	make
	make DESTDIR="$PKG" install

	rm "$PKG"/usr/share/man/man7/symlink.7
}
